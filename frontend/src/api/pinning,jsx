// src/api/pinning.js
export async function pinProject(projectId, token) {
  const res = await fetch(`http://localhost:5000/api/projects/${projectId}/pin`, {
    method: "POST",
    headers: { Authorization: `Bearer ${token}` },
  });
  return res.json();
}

export async function unpinProject(projectId, token) {
  const res = await fetch(`http://localhost:5000/api/projects/${projectId}/unpin`, {
    method: "POST",
    headers: { Authorization: `Bearer ${token}` },
  });
  return res.json();
}
